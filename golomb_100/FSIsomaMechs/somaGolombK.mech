vk = [-90]
gd = [4] 
taub = [150]
theta_a = [-50]
sigma_a = [20]
tau_a = [2]
theta_b = [-70]
sigma_b = [-6]
 
ainf(X) = 1./(1+exp(-(X-theta_a)./sigma_a)) 
binf(X) = 1./(1+exp(-(X-theta_b)./sigma_b)) 
somaGolombK(X,a,b) = gd.*(a.^3).*b.*(X-vk)
 
a' = (ainf(X)-a)./tau_a; 
a(0) = 0.15 + 0.60*rand(1,Npop)
b' = (binf(X)-b)./taub;
b(0) = 0.15 + 0.45*rand(1,Npop)
 
@current += -somaGolombK(X,a,b)
 
